<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="setting_text">
        <item name="android:paddingStart">@dimen/magic_8dp</item>
        <item name="android:paddingEnd">@dimen/magic_8dp</item>
        <item name="android:paddingTop">@dimen/magic_4dp</item>
        <item name="android:paddingBottom">@dimen/magic_4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="setting_horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="setting_button">
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="strokeWidth">@dimen/magic_4dp</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">16dp</item>
        <item name="android:lines">1</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="write_note_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>
</resources>