<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="SettingNoteViewModel"
            type="tw.com.andyawd.seenote.settingnote.SettingNoteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/fenMtToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fenMtToolBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fsnMtvTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/setting_note_text_size"
                    app:layout_constraintBottom_toTopOf="@+id/fsnAcsbTextSize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/fsnAcsbTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/magic_8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:max="100"
                    android:padding="@dimen/magic_8dp"
                    android:progress="0"
                    android:thumb="@drawable/square_b22222_size40"
                    app:layout_constraintBottom_toTopOf="@+id/fsnMbSettingNotePage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fsnMtvTextSize"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintVertical_chainStyle="packed" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fsnMbSettingNotePage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="@dimen/magic_8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/setting_note_page"
                    app:icon="@drawable/ic_baseline_view_list_24"
                    app:layout_constraintBottom_toTopOf="@+id/fsnMbSettingWriteNote"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fsnAcsbTextSize" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fsnMbSettingWriteNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/magic_8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="@dimen/magic_8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/setting_write_note"
                    app:icon="@drawable/ic_baseline_note_24"
                    app:layout_constraintBottom_toTopOf="@+id/fsnMbSponsorSeeNote"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fsnMbSettingNotePage" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fsnMbSponsorSeeNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/magic_8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="@dimen/magic_8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/sponsor_see_note"
                    app:icon="@drawable/ic_baseline_attach_money_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fsnMbSettingWriteNote" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>